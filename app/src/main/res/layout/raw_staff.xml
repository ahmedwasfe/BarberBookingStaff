<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_salon"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:padding="@dimen/margin4">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin8"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_barber"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_staff_name"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:text="Staff #1"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold"
            android:padding="@dimen/margin8"
            android:layout_marginStart="@dimen/margin8"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_barber"/>

        <TextView
            android:id="@+id/txt_staff_username"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="@dimen/textSize16"
            android:textStyle="normal"
            android:textColor="@color/colorButton"
            android:padding="@dimen/margin8"
            android:layout_marginStart="@dimen/margin8"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_staff_name"
            app:layout_constraintStart_toEndOf="@id/img_barber"/>

        <TextView
            android:id="@+id/txt_staff_type"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:text="Barber type"
            android:textSize="@dimen/textSize16"
            android:textStyle="normal"
            android:textColor="@color/colorButton"
            android:padding="@dimen/margin8"
            android:layout_marginStart="@dimen/margin8"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_staff_username"
            app:layout_constraintStart_toEndOf="@id/img_barber"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
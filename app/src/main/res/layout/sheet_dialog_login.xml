<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/txt_title"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:text="@string/staff_login"
            android:textColor="@color/colorWhite"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="@color/colorPrimary"
            android:padding="@dimen/margin20"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_layout_username"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:padding="@dimen/margin5"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/txt_input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:text="saja.2002"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_layout_password"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:padding="@dimen/margin5"
            app:layout_constraintTop_toBottomOf="@id/txt_layout_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/txt_input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/password"
                android:text="123456"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_btn"
            android:layout_width="@dimen/widthheight"
            android:layout_height="wrap_content"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/txt_layout_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <Button
                android:id="@+id/btn_login"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/log_in"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:textSize="@dimen/margin16"
                android:padding="14dp"
                android:layout_margin="@dimen/margin8"
                android:background="@drawable/btn_bg"
                app:layout_constraintTop_toBottomOf="@id/spinner_barber_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <Button
                android:id="@+id/btn_login_add_barber"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/cancel"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:textSize="@dimen/margin16"
                android:padding="14dp"
                android:layout_margin="@dimen/margin8"
                android:background="@drawable/btn_bg"
                app:layout_constraintTop_toBottomOf="@id/spinner_barber_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity.AddSalonActivity"
    android:padding="@dimen/margin10">

    <TextView
        android:id="@+id/txt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/textCardSize20"
        android:textColor="@color/colorAccent"
        android:padding="16dp"
        android:layout_marginTop="@dimen/margin16"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txt_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/previous"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/textCardSize20"
        android:textColor="@color/colorAccent"
        android:padding="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.ahmet.barberbookingstaff.Common.NonSwipeViewPager
        android:id="@+id/non_view_pager"
        android:layout_width="@dimen/widthheight"
        android:layout_height="@dimen/widthheight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_view"
        app:layout_constraintBottom_toTopOf="@id/txt_next"/>


    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="@dimen/widthheight"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_animationType="All"
        app:sv_doneCircleColor="@color/colorAccent"
        app:sv_doneStepLineColor="@color/colorAccent"
        app:sv_doneStepMarkColor="@color/colorWhite"
        app:sv_doneTextColor="@color/colorAccent"
        app:sv_selectedCircleColor="@color/colorButton"
        app:sv_selectedStepNumberColor="@color/colorWhite"
        app:sv_selectedTextColor="@color/colorButton"
        app:sv_textPadding="12dp" />

 </androidx.constraintlayout.widget.ConstraintLayout>


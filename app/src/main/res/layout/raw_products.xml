<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:padding="@dimen/margin4"
    android:layout_margin="@dimen/margin8"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_shopping">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/margin8"
            android:scaleType="centerCrop"
            android:src="@drawable/default_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colonna Spray"
            android:textSize="@dimen/textSize16"
            android:textAllCaps="true"
            android:textColor="@color/colorButton"
            android:gravity="center"
            android:padding="@dimen/margin8"
            app:layout_constraintTop_toBottomOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/txt_name_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <TextView
                android:id="@+id/txt_price_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$20"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/margin8"
                android:layout_weight="1"
                android:gravity="start"/>

            <TextView
                android:id="@+id/txt_remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:visibility="gone"
                android:textSize="20sp"
                android:fontFamily="@font/bellerose"
                android:drawableEnd="@drawable/ic_remove"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
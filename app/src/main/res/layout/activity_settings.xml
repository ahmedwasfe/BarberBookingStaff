<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin8"
    tools:context=".SubActivity.SettingsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin8"
                android:text="@string/profile"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_name"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_profile">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:padding="@dimen/margin8">

                    <ImageView
                        android:id="@+id/img_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_name"
                        android:text="@string/name"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_name"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_name"
                        android:text="@string/name"
                        android:textColor="@color/colorButton" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_phone"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_user_name">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:padding="@dimen/margin8">

                    <ImageView
                        android:id="@+id/img_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_mobile" />

                    <TextView
                        android:id="@+id/text_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_phone"
                        android:text="@string/mobile_number"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_mobile"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_phone"
                        android:text="+970592435704"
                        android:textColor="@color/colorButton" />



                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_email"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_user_phone">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="@dimen/margin8">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_email"
                        android:text="@string/email"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_email"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_email"
                        android:text="test@testemail.com"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_verification_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verification"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/text_verification_bg"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin4"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_city"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_user_email">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:padding="@dimen/margin8">

                    <ImageView
                        android:id="@+id/img_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_city_location" />

                    <TextView
                        android:id="@+id/text_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_city"
                        android:text="@string/city"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_city"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_city"
                        android:text="Gaza"
                        android:textColor="@color/colorButton" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_address"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_city">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:padding="@dimen/margin8">

                    <ImageView
                        android:id="@+id/img_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_address" />

                    <TextView
                        android:id="@+id/text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_address"
                        android:text="@string/address"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_address"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_address"
                        android:text="gaza/ alremal street"
                        android:textColor="@color/colorButton" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/first_view"
                android:layout_width="@dimen/widthheight"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin20"
                android:layout_marginBottom="@dimen/margin20"
                android:background="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_address" />

            <TextView
                android:id="@+id/txt_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin8"
                android:text="@string/general"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_salon_satus"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_general">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8"
                    android:padding="@dimen/margin16"
                    >

                    <ImageView
                        android:id="@+id/img_salon_satus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_password" />

                    <TextView
                        android:id="@+id/txt_salon_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_toEndOf="@id/img_salon_satus"
                        android:text="@string/close_salon"
                        android:textColor="@color/colorButton" />

                    <Switch
                        android:id="@+id/switch_salon_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_salon_status"
                        android:textColor="@color/colorButton"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_language"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_salon_satus">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8"
                    android:padding="@dimen/margin16"
                    >

                    <ImageView
                        android:id="@+id/img_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:id="@+id/text_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_toEndOf="@id/img_language"
                        android:text="@string/language"
                        android:textColor="@color/colorButton" />

                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_language"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_toEndOf="@id/img_language"
                        android:text="English"
                        android:textColor="@color/colorButton" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_dark_mode"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_language">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8"
                    android:padding="@dimen/margin16">

                    <ImageView
                        android:id="@+id/img_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_dark_mode" />

                    <TextView
                        android:id="@+id/txt_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_toEndOf="@id/img_dark_mode"
                        android:text="@string/dark_mode"
                        android:textColor="@color/colorButton" />

                    <Switch
                        android:id="@+id/switch_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_dark_mode"
                        android:textColor="@color/colorButton"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_rate_app"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_dark_mode">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:padding="@dimen/margin8"
                    >

                    <ImageView
                        android:id="@+id/img_rate_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin8"
                        android:src="@drawable/ic_rate_app" />

                    <TextView
                        android:id="@+id/txt_rate_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_toEndOf="@id/img_rate_app"
                        android:text="@string/rate_the_app"
                        android:textColor="@color/colorButton" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/secound_view"
                android:layout_width="@dimen/widthheight"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin20"
                android:layout_marginBottom="@dimen/margin20"
                android:background="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_rate_app" />

            <TextView
                android:id="@+id/txt_About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/about"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secound_view" />

            <TextView
                android:id="@+id/txt_app_version"
                android:layout_width="@dimen/widthheight"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textSize="@dimen/textCardSize20"
                android:textColor="@color/colorButton"
                android:layout_margin="@dimen/margin16"
                android:padding="@dimen/margin8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_About" />

            <TextView
                android:id="@+id/txt_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="@dimen/textCardSize20"
                android:textColor="@color/colorButton"
                android:layout_margin="@dimen/margin16"
                android:padding="@dimen/margin8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_app_version" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin8"
        tools:context=".SubActivity.AddSalonActivity">



    <Button
        android:id="@+id/btn_login_salon"
        android:layout_width="@dimen/widthheight"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/log_in_salon"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/margin16"
        android:padding="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toTopOf="@id/btn_login_barber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_login_barber"
        android:layout_width="@dimen/widthheight"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/log_in_barber"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize16"
        android:padding="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>